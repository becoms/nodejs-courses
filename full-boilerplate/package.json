{
  "name": "boilerplate-api",
  "version": "0.0.1",
  "main": "./src/index.js",
  "contributors": [
    "Becoms <dev@becoms.tech>"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "dev": "nodemon --exec npx babel-node -r dotenv-defaults/config src/index.js",
    "build": "babel src --delete-dir-on-start --out-dir dist --ignore \"src/**/*.test.js\"",
    "start": "cross-env NODE_ENV=production node -r dotenv-defaults/config dist/index.js",
    "test": "is-ci && jest --ci --forceExit || jest --watch --forceExit",
    "lint": "eslint src",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.11.2",
    "@hapi/boom": "^10.0.1",
    "@types/jest": "^29.4.0",
    "async-retry": "^1.3.3",
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "dotenv-defaults": "^5.0.2",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^8.4.1",
    "express-rate-limit": "^6.7.0",
    "got": "^12.5.3",
    "helmet": "^6.0.1",
    "jwks-rsa": "^3.0.1",
    "lodash": "^4.17.21",
    "lru-cache": "^7.17.0",
    "mock-jwks": "^1.0.9",
    "mongoose": "^6.10.0",
    "morgan": "^1.10.0",
    "nock": "^13.3.0",
    "ora": "^6.1.2",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.6",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "is-ci": "^3.0.1",
    "jest": "^29.4.3",
    "jest-express": "^1.12.0",
    "jest-runner-eslint": "^1.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:jest/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "ignoreRestSiblings": true
        }
      ]
    },
    "env": {
      "node": true,
      "es6": true
    }
  },
  "prettier": {
    "printWidth": 100
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "4.4.0"
    }
  },
  "jest": {
    "projects": [
      {
        "preset": "@shelf/jest-mongodb",
        "displayName": "test",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
          "<rootDir>/src/setupTests.js"
        ]
      },
      {
        "displayName": "lint",
        "runner": "jest-runner-eslint",
        "testMatch": [
          "<rootDir>/src/**/*.js"
        ]
      }
    ]
  }
}